# EditorConfig fájl – egységes formázás PowerShell szkriptekhez

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.ps1]
charset = utf-8-bom
indent_style = space
indent_size = 4

[*.psd1]
charset = utf-8-bom
indent_style = space
indent_size = 4

[*.md]
charset = utf-8
trim_trailing_whitespace = false

[*.json]
indent_style = space
indent_size = 2